        <% categories.forEach(category => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= category.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        napisany dnia:
                        <%= category.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2"><%= category.description %></div>
                    
                </div>
            </div>
        <% }) %>
    </div>
</body>
