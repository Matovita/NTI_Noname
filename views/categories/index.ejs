<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>NTI</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4" style="text-align: center;font-weight: bold;">Forum</h1>

        <!-- <button class="login-btn">Zaloguj</button>
        <button class="register-btn">Zarejestruj</button> -->
        <form class="register-form" action="/login/api/register" method="POST">
            <h2>Register</h2>
            <p>
              <label>
                Username:
                <input type="text" placeholder="username" name="username" id="usernameRegister" />
              </label>
              <br />
              <label>
                Password:
                <input type="password" placeholder="password" name="password" id="passwordRegister" />
              </label>
              <br />
              <button class="btn" id="register-accept">Potwierdź</button>
            </p>
          </form>
          
          <script>
			const formR = document.getElementById('register-form')
            const btnReg = document.getElementById('register-accept')
			btnReg.addEventListener('click', registerUser)

			async function registerUser(event) {
				event.preventDefault()
				const username = document.getElementById('usernameRegister').value
				const password = document.getElementById('passwordRegister').value

				const result = await fetch('/api/register', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						username,
						password
					})
				}).then((res) => res.json())

				if (result.status === 'ok') {
					// everythign went fine
					alert('Success')
				} else {
					alert(result.error)
				}
			}
		</script>
      
          <form class="login-form" action="/login/api/login" method="POST">
            <h3>Log In</h3>
            <p>
              <label>
                Username:
                <input type="text" placeholder="username" name="username" id="usernameLog" />
              </label>
              <label>
                Password:
                <input type="password" placeholder="password" name="password" id="passwordLog" />
              </label>
              <br />
              <button class="btn" id="login-accept">Zaloguj</button>
            </p>
          </form>

          <script>
			const forml = document.getElementById('login-form')
            const btnLog = document.getElementById('login-accept')
			btnLog.addEventListener('click', login)

			async function login(event) {
				event.preventDefault()
				const username = document.getElementById('username').value
				const password = document.getElementById('password').value

				const result = await fetch('/api/login', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						username,
						password
					})
				}).then((res) => res.json())

				if (result.status === 'ok') {
					// everythign went fine
					console.log('Got the token: ', result.data)
					localStorage.setItem('token', result.data)
					alert('Success')
				} else {
					alert(result.error)
				}
			}
		</script>

        <a href="/categories/new" class="btn btn-success mb-4">NOWA KATEGORIA</a>

        <% categories.forEach(category => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= category.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        napisany dnia:
                        <%= category.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2"><%= category.description %></div>
                    <a href="/categories/open/<%= category.slug%>" class="btn btn-primary">Otworz</a>
                    <a href="/categories/edit/<%= category.id %>" class="btn btn-info">Edytuj</a>
                    <form action="/categories/<%= category.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger"style="background-color:#a57;">Usuń</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>