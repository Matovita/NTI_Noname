<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>NTI</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Forum</h1>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria1</a>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria2</a>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria3</a>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria4</a>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria5</a>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria6</a>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria7</a>
        <a href="/posts/new" class="btn btn-success mb-4">Kategoria8</a>

        <% posts.forEach(post => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= post.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= post.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2"><%= post.description %></div>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>