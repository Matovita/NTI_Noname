<div class="form-group">
    <label for="title">Nazwa kategorii</label>
    <input required value="<%= post.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Opis</label>
    <textarea name="description" id="description" class="form-control"><%= post.description %></textarea>
</div>
<div class="form-group">
    <label for="createdBy">Created By(narazie w takiej formie)</label>
    <textarea required name="createdBy" id="createdBy" class="form-control"><%= post.createdBy %></textarea>
</div>

<a href="/" class="btn btn-secondary">Anuluj</a>
<button type="submit" class="btn btn-primary">Zapisz</button>